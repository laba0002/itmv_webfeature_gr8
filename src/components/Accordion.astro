    details,
    summary,
    article {
      width: auto;
      margin-bottom: 0.5rem;
    }
  }
  summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    list-style: none;
    margin-bottom: 0;
    padding: 0.5rem;
    border-bottom: 1px #3e5c6d solid;
    font-weight: bold;
    /* border-top: 1px #3e5c6d solid; */
    /* background-color: lightgray; */
  }
  article {
    /* background-color: #eee; */
    padding: 0.5rem;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    gap: 1rem;
  }

  h3 {
    font-weight: bold;
  }

  /* Arrow icon */
